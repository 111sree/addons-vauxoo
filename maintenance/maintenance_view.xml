        </record>
        <menuitem action="action_tire_size_form" id="menu_action_tire_size_form" parent="product.prod_config_main"/>

        <record id="view_tire_brand_tree" model="ir.ui.view">
            <field name="name">tire.brand.tree</field>
            <field name="model">tire.brand</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Marca">
                    <field name="name" select="1"/>
                </tree>
            </field>
        </record>
        <record id="view_tire_brand_form" model="ir.ui.view">
            <field name="name">tire.brand.form</field>
            <field name="model">tire.brand</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Marca">
                    <field name="name" select="1"/>
                </form>
            </field>
        </record>
        <record id="action_tire_brand_form" model="ir.actions.act_window">
            <field name="name">Marca Llanta</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tire.brand</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem action="action_tire_brand_form" id="menu_action_tire_brand_form" parent="product.prod_config_main"/>

    <record model="ir.ui.view" id="view_product_normal_form_maintenance">
        <field name="name">view.product.normal.form.maintenance</field>
        <field name="model">product.product</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="/form/notebook/page[@string='Information']" position="after">
                <page string="Vehicle Data">
                    <field name="maintenance_id" colspan="4"/>
                    <field name="modelo_id"/>
                    <field name="distance"/>
                </page>
                <page string="Info. Llanta">
                    <field name="tire_state"/>
                    <field name="brand_id"/>
                    <field name="model"/>
                    <field name="size"/>
                    <field name="tire_type"/>
                    <newline/>
                    <field name="renew"/>
                    <field name="talacha"/>
                    <field name="recorrido"/>
                    <field name="capas"/>
                    <field name="profundidad"/>
                    <field name="date_tire"/>
                    <field name="current_pos"/>
                </page>
                <page string="Distribucion Llantas">
                    <field name="axle_type" colspan="4"/>
                    <separator string="EJE Delantero" colspan="4"/>
                    <field name="front_left" attrs="{'readonly':[('axle_type', 'in', ['caja4', 'caja8'])]}"/>
                    <field name="front_right" attrs="{'readonly':[('axle_type', 'in', ['caja4', 'caja8'])]}"/>
                    <separator string="EJE Trasero" colspan="4"/>
                    <group colspan="4" col="8">
                        <field name="rear_left2"/>
                        <field name="rear_left"/>
                        <field name="rear_right"/>
                        <field name="rear_right2"/>
                    </group>
                    <separator string="EJE Trasero 2" colspan="4"/>
                    <group colspan="4" col="8">
                        <field name="rear2_left2" attrs="{'readonly':[('axle_type', 'in', ['caja4', 'tracto6'])]}"/>
                        <field name="rear2_left" attrs="{'readonly':[('axle_type', 'in', ['caja4', 'tracto6'])]}"/>
                        <field name="rear2_right" attrs="{'readonly':[('axle_type', 'in', ['caja4', 'tracto6'])]}"/>
                        <field name="rear2_right2" attrs="{'readonly':[('axle_type', 'in', ['caja4', 'tracto6'])]}"/>
                    </group>
                    <separator string="Refacciones" colspan="4"/>
                    <field name="refaccion1"/>
                    <field name="refaccion2"/>
                </page>
                <page string="Tire History">
                    <field name="history_ids" colspan="4" nolabel="1"/>
                </page>
            </xpath>
        </field>
    </record>
    
