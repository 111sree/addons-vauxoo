<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <menuitem icon="terp-sale" id="menu_maintenance_root" name="Mantenimiento"/>
        <menuitem id="menu_maintenance_configuration" name="Configuration" parent="menu_maintenance_root" sequence="1"/>

        <record id="view_maintenance_order_line_form" model="ir.ui.view">
            <field name="name">maintenance.order.line.form</field>
            <field name="model">maintenance.order.line</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Mantenimiento">
                    <group col="4" colspan="3">
                        <field name="product_id" select="1" on_change="onchange_product(product_id)"/>
                        <field name="distance" select="1" on_change="onchange_product(product_id)"/>
                        <field name="bom_id" on_change="onchange_bom(bom_id)" domain="[('modelo_id', 'in', [False, modelo_id])]"/>
                        <field name="name" select="2"/>
                        <field name="orden"/>
                        <field name="priority"/>
                        <field name="type" select="1"/>
                        <field name="date" select="1"/>
                        <field name="date_done" select="2"/>
                        <field name="date_due"/>
                        <field name="costo"/>
                        <field name="date_release" attrs="{'readonly':[('state','!=','in_progress')], 'required':[('state','=','in_progress')]}"/>
                        <field name="modelo_id" invisible="1"/>
                    </group>
                    <notebook>
                        <page string="Materiales">
                            <field name="material_ids" colspan="4" nolabel="1">
                                <tree string="Materiales">
                                    <field name="product_id"/>
                                    <field name="product_qty"/>
                                    <field name="costo"/>
                                    <field name="total"/>
                                    <field name="product_uom"/>
                                </tree>
                                <form string="Materiales">
                                    <field name="product_id" on_change="onchange_product(product_id)"/>
                                    <field name="product_uom" invisible="1"/>
                                    <field name="product_qty"/>
                                    <field name="costo" invisible="1"/>
                                    <field name="total"/>
                                </form>
                            </field>
                            <field name="state" select="1"/>
                            <group col="10" colspan="2">
                                <button name="action_calcular" states="draft" string="Calcular Materiales" type="object"/>
                                <button name="%(wizard_maintenance_start)d" states="draft" string="Comenzar" type="action"/>
                                <button name="action_done" states="in_progress" string="Terminado" type="object"/>
                                <button name="%(wizard_maintenance_cancel)d" states="draft,in_progress" string="Cancelar" type="action"/>
                                <!--button name="action_draft" states="done" string="Borrador" type="object"/-->
                            </group>
                        </page>
                        <page string="Movimientos">
                            <field name="warehouse_id" attrs="{'required':[('state','in',['in_progress','done'])]}"/>
                            <field name="pendiente_id"/>
                            <field name="picking_ids" colspan="4" nolabel="1"/>
                        </page>
                        <page string="Notas">
                            <field name="notes" colspan="4" nolabel="1"/>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record id="view_maintenance_order_line_tree" model="ir.ui.view">
            <field name="name">maintenance.order.line.tree</field>
            <field name="model">maintenance.order.line</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Mantenimiento">
                    <field name="product_id"/>
                    <field name="distance"/>
                    <field name="name"/>
                    <field name="orden"/>
                    <field name="priority"/>
                    <field name="type"/>
                    <field name="state"/>
                    <field name="date"/>
                    <field name="date_done"/>
                    <field name="date_due"/>
                    <field name="date_release"/>
                    <field name="costo"/>
                </tree>
            </field>
        </record>

        <!-- Todos -->
        <record id="action_maintenance_order_line_form" model="ir.actions.act_window">
            <field name="name">Mantenimientos</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">maintenance.order.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>
        <menuitem action="action_maintenance_order_line_form" id="menu_maintenance_order_line" parent="menu_maintenance_root"/>

        <!-- Borrador -->
        <record id="action_maintenance_order_line_draft" model="ir.actions.act_window">
            <field name="name">Borrador</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">maintenance.order.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state','=','draft')]</field>
        </record>
        <menuitem action="action_maintenance_order_line_draft" id="menu_maintenance_order_line_draft" parent="menu_maintenance_order_line"/>

        <!-- Cancelados -->
        <record id="action_maintenance_order_line_cancel" model="ir.actions.act_window">
            <field name="name">Cancelados</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">maintenance.order.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state','=','cancel')]</field>
        </record>
        <menuitem action="action_maintenance_order_line_cancel" id="menu_maintenance_order_line_cancel" parent="menu_maintenance_order_line"/>

        <!-- Terminado -->
        <record id="action_maintenance_order_line_done" model="ir.actions.act_window">
            <field name="name">Realizados</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">maintenance.order.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state','=','done')]</field>
        </record>
        <menuitem action="action_maintenance_order_line_done" id="menu_maintenance_order_line_done" parent="menu_maintenance_order_line"/>

        <!-- En Proceso -->
        <record id="action_maintenance_order_line_progrees" model="ir.actions.act_window">
            <field name="name">En Proceso</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">maintenance.order.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state','=','in_progress')]</field>
        </record>
        <menuitem action="action_maintenance_order_line_progrees" id="menu_maintenance_order_line_progrees" parent="menu_maintenance_order_line"/>

        <!-- Reasignados -->
        <record id="action_maintenance_order_line_reassigned" model="ir.actions.act_window">
            <field name="name">Reasignados</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">maintenance.order.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state','=','reassigned')]</field>
        </record>
        <menuitem action="action_maintenance_order_line_reassigned" id="menu_maintenance_order_line_reassigned" parent="menu_maintenance_order_line"/>

        <!-- BoM's-->
        <record id="view_maintenance_bom_form" model="ir.ui.view">
            <field name="name">maintenance.bom.form</field>
            <field name="model">maintenance.bom</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Ordenes de Mantenimiento">
                    <notebook>
                        <page string="Informacion General">
                            <field name="name" select="1"/>
                            <field name="modelo_id" select="1"/>
                            <field name="costo_total"/>
                            <field name="active" select="2"/>
                            <field name="tiempo" select="2"/>
                            <newline/>
                            <field name="line_ids" colspan="4" nolabel="1">
                                <tree string="Linea Orden de Matenimiento">
                                    <field name="product_id"/>
                                    <field name="product_qty"/>
                                    <field name="costo"/>
                                    <field name="total"/>
                                    <field name="product_uom"/>
                                </tree>
                                <form string="Linea Orden de Matenimiento">
                                    <field name="product_id" on_change="onchange_product(product_id)"/>
                                    <field name="product_qty"/>
                                    <field name="costo"/>
                                    <field name="total"/>
                                    <field name="product_uom"/>
                                </form>
                            </field>
                        </page>
                        <page string="Programa">
                            <field name="type"/>
                            <field name="type_qty"/>
                        </page>
                        <page string="Notas">
                            <field name="notes" colspan="4" nolabel="1"/>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>
        <record id="view_maintenance_bom_tree" model="ir.ui.view">
            <field name="name">maintenance.bom.tree</field>
            <field name="model">maintenance.bom</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Lista de Materiales">
                    <field name="name"/>
                    <field name="modelo_id"/>
                    <field name="costo_total"/>
                    <field name="type"/>
                    <field name="type_qty"/>
                </tree>
            </field>
        </record>
        <record id="action_maintenance_bom_form" model="ir.actions.act_window">
            <field name="name">Mantenimiento BoM</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">maintenance.bom</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem action="action_maintenance_bom_form" id="menu_action_maintenance_bom_form" parent="menu_maintenance_configuration"/>

        <record id="view_tracto_modelo_tree" model="ir.ui.view">
            <field name="name">tracto.modelo.tree</field>
            <field name="model">tracto.modelo</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Modelo">
                    <field name="name" select="1"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
        <record id="view_tracto_modelo_form" model="ir.ui.view">
            <field name="name">tracto.modelo.form</field>
            <field name="model">tracto.modelo</field>
