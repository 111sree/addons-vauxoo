            <field name="res_model">tracto.modelo</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem action="action_tracto_modelo_form" id="menu_action_tracto_modelo_form" parent="menu_maintenance_configuration"/>

        <record id="view_tire_size_tree" model="ir.ui.view">
            <field name="name">tire.size.tree</field>
            <field name="model">tire.size</field>
            <field name="type">tree</field>
