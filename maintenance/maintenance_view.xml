        HISTORIAL DE LLANTAS
        =================================
        <record id="view_tire_history_tree" model="ir.ui.view">
            <field name="name">tire.history.tree</field>
            <field name="model">tire.history</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Historial">
                    <field name="tracto_id" select="1"/>
                    <field name="tire_id" select="1"/>
                    <field name="date" select="1"/>
                    <field name="distance" select="2"/>
                    <field name="position" select="2"/>
                </tree>
            </field>
        </record>
        <record id="view_tire_history_form" model="ir.ui.view">
            <field name="name">tire.history.form</field>
            <field name="model">tire.history</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Historial">
                    <field name="tracto_id" select="1"/>
                    <field name="tire_id" select="1"/>
                    <field name="date" select="1"/>
                    <field name="distance" select="2"/>
                    <field name="position" select="2"/>
                </form>
            </field>
        </record>
        <record id="action_tire_history_form" model="ir.actions.act_window">
            <field name="name">Historial</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tire.history</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem action="action_tire_history_form" id="menu_action_tire_history_form" parent="product.prod_config_main"/>

        <record id="product_normal_form_view_image_inh" model="ir.ui.view">
            <field name="name">product.normal.form.view.image.inh</field>
            <field name="model">product.product</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="/form[@string='Product']/group" position="replace">
                    <group colspan="4" col="6">
                    <group colspan="1" col="2">
                        <separator string="Name" colspan="2"/>
                        <field name="name"/>
                        <field groups="product.group_product_variant" name="variants" />
                    </group>
                    <group colspan="1" col="2">
                        <separator string="Codes" colspan="2"/>
                        <field name="default_code"/>
                        <field name="ean13" groups="base.group_extended"/>
                    </group>
                    <group colspan="1" col="2">
                        <separator string="Characteristics" colspan="2"/>
                        <field name="sale_ok"/>
                        <field name="purchase_ok"/>
                    </group>
                    <group colspan="1" col="2">
                        <separator string="Image" colspan="2"/>
                        <field name="product_image" widget='image'/>
                    </group>
                   </group>
                </xpath>
            </field>
        </record>


    </data>
</openerp>
