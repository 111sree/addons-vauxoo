<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_hr_employee_form_inherit_regime">
            <field name="name">view.hr.employee.form.inherit.regime</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@string='HR Settings']" position="after">
                    <page string="HR Payroll">
                        <group>
                            <field name="regime_id" required="1"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
