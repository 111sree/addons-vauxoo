<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_wizard_payment_report" model="ir.ui.view">
            <field name="name">view.wizard.payment.report</field>
            <field name="model">wizard.payment.report</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Reporte de pagos">
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="currency_id"/>
                    <newline/>
                    <separator colspan="4"/>
                    <group colspan="4" col="6">
                        <button special="cancel" string="_Cancel" icon="gtk-cancel"/>
                        <button name="check_report" type="object" string="_Generar Reporte" icon="gtk-ok"/>
                    </group>
                </form>
            </field>
        </record>

        <act_window name="Reporte de Cobranza"
            res_model="wizard.payment.report"
            src_model="res.partner"
            view_mode="form"
            target="new"
            key2="client_action_multi"
            id="action_wizard_payment_report"/>

    </data>
</openerp>
