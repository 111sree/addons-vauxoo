<?xml version="1.0"?>
<openerp>
  <data>


    <record model="ir.ui.view" id="res_company_form_purchase_report">
      <field name="name">res.company.form.purchase.report</field>
      <field name="model">res.company</field>
      <field name="type">form</field>
      <field name="inherit_id" ref="report_multicompany.view_company_form_report_multi"/>
      <field name="arch" type="xml">
        <xpath expr="/form/notebook/page[@string='Reports']" position="inside">
          <field name="purchase_report_id"/> 
        </xpath>
      </field>
    </record>


    <record model="ir.ui.view" id="purchase_order_view_report_multi">
      <field name="name">purchase.order.form.multicompany</field>
      <field name="model">purchase.order</field>
      <field name="type">form</field>
      <field name="inherit_id" ref="purchase.purchase_order_form"/>
      <field name="arch" type="xml">
        <xpath expr="//button[@string='Print']" position="replace">
           <button name="%(purchase_report.purchase_multicompany_report)d" string="Print" states="approved" type="action" icon="gtk-print"/>
        </xpath>
      </field>
    </record>

  </data>
</openerp>
