<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="timesheet_vauxoo_report">
    <t t-call="hr_timesheet_reports.layout">
    <body style="border:0;">
    <div class="endpage">
    <div class="col-md-6">
        <h1>
            <strong>Report Name:</strong>
            <p t-field="o.name"/>
        <h3>
            Resumed Timesheet Report.
        </h3>
        <h4>
            <strong>Filter Name:</strong>
            <p t-field="o.filter_id.name"/>
        </h4>
            <p t-field="o.comment_timesheet"/>
        </p>
    </div>
    <div class="col-md-6">
        <section>
                    <table width="100%">
                        <tr class="title">
                            <td colspan="3"> By Date </td>
                        </tr>
                        <tr class="title">
                            <td> Month </td>
                            <td> Total Hours</td>
                            <td> Billable Hours</td>
                        </tr>
                        <t t-foreach="o.resume_month" t-as="resume">
                            <tr class="by_account">
                                <td style="text-align: left;">
                                    <span t-esc="%s (%s) % (resume.date, resume.date_count)"/>
                                </td>
                                <td>
                                    <span t-field="resume.unit_amount"/>
                                </td>
                                <td>
                                    <span t-esc="resume.invoiceables_hours or 0.00"/>
                                </td>
                            </tr>
                        </t>
                            <tr class="totals">
                                <td>Totals</td>
                                <td><span t-field="o.total_ts_by_month"/></td>
                                <td><span t-field="o.total_ts_bill_by_month"/></td>
                            </tr>
                    </table>
        </section>
        <section>
                    <table width="100%">
                        <tr class="title">
                            <td colspan="3"> By Analytic </td>
                        </tr>
                        <tr class="title">
                            <td> Account </td>
                            <td> Total Hours</td>
                            <td> Billable Hours</td>
                        </tr>
                        <t t-foreach="o.resume" t-as="resume">
                            <tr class="by_account">
                                <td style="text-align: left;">
                                    <span t-esc="%s (%s) % (resume.account_id.name.split('/')[-1], resume.account_id_count)"/>
                                </td>
                                <td>
                                    <span t-esc="resume.unit_amount or 0.00"/>
                                </td>
                                <td>
                                    <span t-esc="resume.invoiceables_hours or 0.00"/>
                                </td>
                            </tr>
                        </t>
                        <tr class="totals">
                            <td>Totals</td>
                            <td><span t-field="o.total_ts_by_month"/></td>
                            <td><span t-field="o.total_ts_bill_by_month"/></td>
                        </tr>
                    </table>
        </section>
        <section>
                    <table width="100%">
                            <tr class="title">
                                <td colspan="3"> By User </td>
                            </tr>
                            <tr class="title">
                                <td> User </td>
                                <td> Total Hours</td>
                                <td> Billable Hours</td>
                            </tr>
                        <t t-foreach="o.resume_user" t-as="resume">
                            <tr class="by_account">
                                <td style="text-align: left;">
                                    <span t-esc="%s (%s) % (resume.user_id.name.split('/')[-1], resume.user_id_count)"/>
                                </td>
                                <td>
                                    <span t-esc="resume.unit_amount or 0.00"/>
                                </td>
                                <td>
                                    <span t-esc="resume.invoiceables_hours or 0.00"/>
                                </td>
                            </tr>
                        </t>
                            <tr class="totals">
                                <td>Totals</td>
                                    <td><span t-field="o.total_ts_by_month"/></td>
                                    <td><span t-field="o.total_ts_bill_by_month"/></td>
                            </tr>
                        </table>
        </section>
    </div>
    </div>

    <t t-foreach="o.invoices">
    <div class="endpage">
    <div class="col-md-6">
        <h2>Economical Status</h2>
        <h3>
            <strong>Filter Name:</strong>
            <p t-field="o.filter_invoice_id.name"/>
        </h3>
        <p t-field="o.comment_invoices"/>
    </div>
    <div class="col-md-6">
            <table width="100%">
                <tr class="title">
                    <td colspan="2">Status of invoices until today in the project.</td>
                </tr>
                <tr class="title">
                    <td width="10%"> Period </td>
                    <td class="invoices_content" style="padding: 0px;" colspan="2">
                        <table width="100%">
                            <tr>
                                <td width="10%"> Number </td>
                                <td width="20%"> Total </td>
                                <td width="20%"> Tax</td>
                                <td width="20%"> Total</td>
                                <td width="20%"> Pending</td>
                                <td width="10%"> Currency </td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <t t-foreach="o.periods" t-as="period">
                <tr>
                    <td width="10%" style="text-align: left;">
                    <span t-field="period.period_id.name"/>
                    </td>
                    <td colspan="2" class="invoices_content">
                        <table width="100%">
                            <t t-foreach="o.invoices" t-as="invoice">
                                <t t-if="invoice.period_id.id == period.period_id.id">
                                <tr t-att-class="invoice.residual > 1.00 and 'unpaid' or invoice.residual < 1.00 and 'paid'">
                                    <td width="20%"><span t-field="invoice.number"/></td>
                                    <td width="20%"><span t-field="invoice.amount_untaxed"/></td>
                                    <td width="20%"><span t-field="invoice.amount_tax"/></td>
                                    <td width="20%"><span t-field="invoice.amount_total"/></td>
                                    <td width="20%"><span t-field="invoice.residual"/></td>
                                    <td width="10%"><span t-field="invoice.currency_id.name"/></td>
                                </tr>
                                </t>
                        </t>
                        </table>
                    </td>
                </tr>
            </t>
                <tr>
                    <td class="invoices_content">
                        <table width="100%">
                        <t t-foreach="o.total_invoices" t-as="currency">
                            <tr>
                                <td><span t-field="currency.currency_id.name"/></td>
                            </tr>
                        </t>
                        </table>
                    </td>
                    <td class="invoices_content">
                        <table width="100%">
                        <t t-foreach="o.total_invoices" t-as="currency">
                        <tr>
                            <td width="10%"> </td>
                            <td width="20%"><span t-field="invoice.amount_untaxed"/></td>
                            <td width="20%"><span t-field="invoice.amount_tax"/></td>
                            <td width="20%"><span t-field="invoice.amount_total"/></td>
                            <td width="20%"><span t-field="invoice.residual"/></td>
                            <td width="10%"> </td>
                        </tr>
                        </t>
                        </table>
                    </td>
                </tr>
            </table>
            <section>
                <h2><u>Numbers Explained</u></h2>
                <t t-set="total_train" t-value="0"/>
                <t t-set="total_cons" t-value="0"/>
                <t t-set="total_lic" t-value="0"/>
                <t t-set="total_others" t-value="0"/>
                <t t-foreach="o.resume_product" t-as="il">
                    <t t-set="total_train" t-value="il.total_train+total_train"/>
                    <t t-set="total_cons" t-value="il.total_cons+total_cons"/>
                    <t t-set="total_lic" t-value="il.total_lic+total_lic"/>
                    <t t-set="total_others" t-value="il.total_others+total_others"/>
                    <div class="col-md-6">
                        <h3>
                            <strong>Amounts in Currency </strong>
                            <u t-field="il"/>
                        </h3>
                        <p><b>Training: </b><span t-field="il.training"/></p>
                        <p><b>Consultancy: </b><span t-field="il.consultancy"/></p>
                        <p><b>Enterprises: </b><span t-field="il.enterprises"/></p>
                        <p><b>Others: </b><span t-field="il.others"/></p>
                        <hr/>
                        <p><b>Total: </b><span t-field="il.total"/></p>
                        <hr/>
                        <p><b>Total in <u t-field="o.currency_id.name"></u>: </b><span t-field="il.total_in_control"/></p>
                        <hr/>
                        <p><b>Conversion Rate: </b><span t-field="il.conversion_rate"/></p>
                    </div>
                </t>
            </section>
            <hr/>
            <section>
                <h2>
                    <strong>Resumed amounts in </strong>
                    <u t-field="o.currency_id.name"/></h2>
                <div class="col-md-6">
                <p><b>Total Invoiced</b>
                <ul>
                    <li><b>Training: </b><span t-esc="total_train"/></li>
                    <li><b>Consultancy: </b><span t-esc="total_cons"/></li>
                    <li><b>Enterprises: </b><span t-esc="total_lic"/></li>
                    <li><b>Others: </b><span t-esc="total_others"/></li>
                </ul>
                </p>
                </div>
                <div class="col-md-6">
                <p><b>Totals Timesheet</b>
                <ul>
                    <li><b>Billable: </b><span t-field="o.resumed_numbers.pending"/></li>
                    <li><b>Pending <br/><sub>Billables - Billed</sub>: </b><br/><span t-esc="o.resumed_numbers.pending - total_cons"/></li>
                </ul>
                </p>
                </div>
            </section>
    </div>
    </div>
    </t>
    <t t-if="o.issues">
        <div class="endpage">
        <div class="col-md-6">
            <h3> Issues. </h3>
            <h4>
                <strong>Filter Name: </strong>
                <p t-field="o.filter_issue_id.name"/>
            </h4>
            <p t-field="o.comment_issues"/>
        </div>
        <div class="col-md-6">
            <table width="100%">
                <tbody>
                <tr class="title">
                    <td colspan="3">Status of issues until today in the project.</td>
                </tr>
                <tr class="title">
                    <td width="50%"> Analytic Account </td>
                    <td width="10%"> Qty </td>
                    <td width="40%"> Status </td>
                </tr>
                <t t-foreach="o.issues" t-as="issue">
                    <tr>
                        <td width="50%" style="text-align: left;">
                            <span t-esc="issue.analytic_account_id.name or 'Not analytic Setted.'"/>
                        </td>
                        <td  width="10%" class="invoices_content">
                            <span t-field="issue.analytic_account_id_count"/>
                        </td>
                        <td  width="40%" style="text-align: right;" class="invoices_content">
                            %for stage in issue['children_by_stage'] :
                        <t t-foreach="issue.children_by_stage" t-as="stage">
                            <p style="padding-top:2px;" t-esc="stage.stage_id.name - stage.stage_id_count"/>
                        </t>
                    </td>
                </tr>
                </t>
                </tbody>
            </table>
        </div>
        </div>
    </t>

    <t t-if="o.user_stories">
        <div class="endpage">
        <div class="col-md-6">
            <h3> User Stories. </h3>
            <h4>
                <strong>Filter Name:</strong>
                <p t-field="o.filter_hu_id.name"/>
            </h4>
            <p t-field="o.comment_hu"/>
        </div>
        <div class="col-md-6">
            <table width="100%">
                <tr class="title">
                    <td colspan="7">Status of User Stories until today in the project.</td>
                </tr>
                <tr class="title">
                    <td width="10%"> ID </td>
                    <td width="35%"> Title </td>
                    <td width="15%"> Asked By </td>
                    <td width="10%"> Planned </td>
                    <td width="10%"> Effective </td>
                    <td width="10%"> Invoiceable </td>
                    <td width="10%"> Status </td>
                </tr>
                <t t-foreach="o.user_stories" t-as="hu">
                    <tr>
                        <td width="10%" style="text-align: left;">
                            <span t-field="hu.id"/>
                        </td>
                        <td  width="35%" class="description">
                            <span t-field="hu.name"/>
                        </td>
                        <td  width="15%" class="invoices_content" style="text-align: left;">
                            <span t-field="hu.owner_id.name"/>
                        </td>
                        <td  width="10%" class="invoices_content">
                            <span t-field="hu.planned_hours"/>
                        </td>
                        <td  width="10%" class="invoices_content">
                            <span t-field="hu.effective_hours"/>
                        </td>
                        <td  width="10%" class="invoices_content">
                            <span t-field="hu.invoiceable_hours"/>
                        </td>
                        <td  width="10%" style="text-align: right;" class="invoices_content">
                            <span t-field="hu.state"/>
                        </td>
                        </td>
                    </tr>
                </t>
            </table>
        </div>
        </div>
    </t>

        <t t-if="o.show_details">
            <h3> Detailed Report. </h3>
            <t t-foreach="o.data" t-as="res">
                <table width="100%" style="font-size: 12px;">
                    <tr>
                        <th colspan="10">
                            <h3><b>Analytic Account:</b><span t-field="res"/></h3>
                        </th>
                    </tr>
                    <tr>
                        <th width="5%"> ID </th>
                        <th> Issue </th>
                        <th> User Story </th>
                        <th> Invoice </th>
                        <th width="10%"> User </th>
                        <th> Task </th>
                        <th> Description </th>
                        <th> Date </th>
                        <th> Duration </th>
                        <th> Bill </th>
                    </tr>
                    <tr t-att-class="not res.to_invoice and 'red' or res.to_invoice.id == 1 and 'bold' or res.to_invoice.id == 5 and 'green' or 'blue'">
                        <td width="5%">
                            <span t-field="res.id"/>
                        </td>
                        <td>
                            <span t-field="res.issue"/>
                        </td>
                        <td>
                            <span t-esc="res.task_id.userstory_id and res.task_id.userstory_id.id or 'Na'"/>
                        </td>
                        <td>
                            <span t-esc="res.invoice_id.name or 'N-I'"/>
                        </td>
                        <td width="10%">
                            <span t-field="res.author"/>
                        </td>
                        <td class="description">
                            <span t-esc="'%s: %s' % (res.task_id and res.task_id.id, res.description)"/>
                        </td>
                        <td class="date">
                            <span t-field="res.date"/>
                        </td>
                        <td class="duration">
                            <span t-field="res.duration"/>
                        </td>
                        <td>
                            <span t-esc="res.to_invoice and res.to_invoice.name or 'No Setted'"/>
                        </td>
                        <td class="duration">
                            <span t-field="res.invoiceables_hours"/>
                        </td>
                    </tr>
                </table>
            </t>
    </t>
</body>
</html>

    Status API Training Shop Blog About Help


    </t>
</template>

<template id="timesheet_report_vauxoo">
    <t t-call="report.html_container">
        <t t-foreach="doc_ids" t-as="doc_id">
            <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'hr_timesheet_reports.timesheet_vauxoo_report')"/>
        </t>
    </t>
</template>
</data>
</openerp>
