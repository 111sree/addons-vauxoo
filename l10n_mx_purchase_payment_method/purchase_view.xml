<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_res_company_inherit_bank_form">
            <field name="name">view.res.company.inherit.bank.form</field>
            <field name="model">purchase.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/notebook/page[@string='Delivery &amp; Invoicing']/field[@name='date_approve']" position="after">
                    <group colspan="4" col="2">
                        <separator string="Bank" colspan="2"/>
                        <field name="acc_payment"/>
                        <field name="pay_method_id" widget="selection" string="Payment Method"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
