<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_last_digits_form_inh">
            <field name="name">view.last.digits.form.inh</field>
            <field name="type">form</field>
            <field name="model">res.partner.bank</field>
            <field name="inherit_id" ref="base.view_partner_bank_form"/>
            <field name="arch" type="xml">
                <field name="acc_number" position="after">
                    <field name="last_acc_number"/>
                </field>
            </field>
        </record>
        
        <record model="ir.ui.view" id="view_partner_form_inh">
            <field name="name">view.partner.form.inh.xml22</field>
            <field name="type">form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="account.view_partner_property_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Accounting']/field[@name='bank_ids']/tree/field[@name='acc_number']" position="after">
                    <field name="last_acc_number"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
