<?xml version="1.0"?>
<openerp>
    <data>
<!--TODO Assing group  ref="hr.group_hr_manager" to this views.-->
        <record model="ir.ui.view" id="view_producthr_form">
            <field name="name">product.product.hr.form</field>
            <field name="model">product.product</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Conceptos Hr">
                    <separator string="Data from Products" colspan="4"/>
                    <newline/>
                    <group col="6" colspan="4">
                        <field name="name"/>
                        <field name="number"/>
                        <field name="default_code"/>
                        <newline/>
                        <field name="categ_id"/>
                        <field name="variants"/>
                        <field name="type" select="2"/>
                    </group>
                    <separator string="Data for Payment" colspan="4"/>
                    <newline/>
                    <group col="6" colspan="4">
                        <group colspan="1" col="2">
                            <field name="hr_concept"/>
                            <field name="adicion_septimo"/>
                            <field name="imprimir_rel_no"/>
                            <field name="imprimir_recibo"/>
                            <field name="pedir_dia_en_captura"/>
                            <field name="afecta_prev_social"/>
                            <field name="valor"/>
                            <field name="__cod"/>
                        </group>
                        <group colspan="2" col="4">
                            <field name="forma_de_pago"/>
                            <field name="proceso_calculo"/>
                            <field name="saldo"/>
                            <field name="forma_operacion"/>
                            <field name="unidades"/>
                            <field name="varios"/>
                            <field name="afecta_dias_trab_aut"/>
                            <field name="afecta_ispt"/>
                            <field name="afecta_imss"/>
                            <field name="exento"/>
                            <field name="comp_cargo_poliza"/>
                            <field name="devolc_ispt"/>
                            <field name="saldo"/>
                            <field name="vacac_incap"/>
                        </group>
                    </group>
                    <newline/>
                    <group col="6" colspan="4">
                        <group colspan="1" col="2">
                            <separator string="Data for Accounting" colspan="4"/>
                            <field name="property_account_expense" domain="[('type','&lt;&gt;','view'),('type','&lt;&gt;','consolidation')]"/>
                        </group>
                        <group colspan="1" col="2">
                            <separator string="Taxes to be paid for this Concept" colspan="4"/>
                            <field name="supplier_taxes_id" nolabel="1"/>
                        </group>
                    </group>
                    <separator string="Description: use this field to describe why this concept should be used." colspan="4"/>
                    <group col="6" colspan="4">
                        <field name="description" nolabel="1"/>
                    </group>
                </form>
            </field>
        </record>
<!--TODO Assing group  ref="hr.group_hr_manager" to this views.-->
        <record model="ir.ui.view" id="view_producthr_tree">
            <field name="name">product.product.hr.tree</field>
            <field name="model">product.product</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Listado de Conceptos Hr">
                        <field name="default_code"/>
                        <field name="name"/>
                        <field name="categ_id"/>
                        <field name="valor"/>
                        <field name="property_account_expense"/>
                </tree>
            </field>
        </record>
<!--Definiendo manualmente las vistas y acciones para obligar a que los menues sean correctamente abiertos-->
       <record id="act_view_hr_concepts_tree" model="ir.actions.act_window">
            <field name="name">All Concepts</field>
            <field name="res_model">product.product</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_producthr_tree"/>
            <field name="domain">[('hr_concept','=',True)]</field>
        </record>
        <record id="act_view_hr_concepts_form" model="ir.actions.act_window.view">
            <field name="sequence">20</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_producthr_form"/>
            <field name="act_window_id" ref="act_view_hr_concepts_tree"/>
        </record>
<!--  Fin de definiciones de vistas-->
        <menuitem 
            id="menu_product_hr" 
            name="List of Concepts" 
            parent="hr.menu_hr_configuration"
            sequence="50" groups="hr.group_hr_manager"
            action="act_view_hr_concepts_tree"/>
    </data>
</openerp>
