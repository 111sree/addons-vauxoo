<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_ir_attachment_facturae_mx_filter" model="ir.ui.view">
            <field name="name">view.ir.attachment.facturae.mx.filter</field>
            <field name="model">ir.attachment.facturae.mx</field>
            <field name="arch" type="xml">
                <search string="Attachment Factura-E">
                    <field name="name"/>
                    <field name="identifier"/>
                    <field name="res_pac"/>
                    <field name="state"/>
                    <field name="id_source"/>
                    <field name="model_source"/>
                </search>
            </field>
        </record>

        <record id="view_ir_attachment_facturae_mx_form" model="ir.ui.view">
            <field name="name">view.ir.attachment.facturae.mx.form</field>
            <field name="model">ir.attachment.facturae.mx</field>
            <field name="arch" type="xml">
                <form string="Attachment Factura-E" version="7.0">
                    <header>
                        <button name="create_ir_attachment_facturae" states="draft" string="Validate Attachment" type="object" groups="l10n_mx_facturae_groups.group_l10n_mx_facturae_user"/>
                        <button name="signal_confirm" states="draft" string="Confirm" type="object" groups="l10n_mx_facturae_groups.group_l10n_mx_facturae_user"/>
                        <button name="signal_sign" states="confirmed" string="Sign" type="object" class="oe_highlight" groups="l10n_mx_facturae_groups.group_l10n_mx_facturae_user"/>
                        <button name="signal_printable" states="printable" string="Generate Printable Format" type="object" class="oe_highlight" groups="l10n_mx_facturae_groups.group_l10n_mx_facturae_user"/>
                        <button name="signal_send_customer" attrs="{'invisible':['|', ('date_print_report','=',False), ('state', 'not in', ('signed', 'done'))]}" string="Send to Customer" type="object" class="oe_highlight" groups="l10n_mx_facturae_groups.group_l10n_mx_facturae_user"/>
                        <button name="signal_done" states="sent_backup" string="Done" type="object" groups="l10n_mx_facturae_groups.group_l10n_mx_facturae_user"/>
                        <button name="signal_cancel" states="draft,confirmed,signed,printable,sent_backup,sent_customer,done" string="Cancel" type="object" groups="l10n_mx_facturae_groups.group_l10n_mx_facturae_user"/>
                        <button name="signal_printable" states="done" string="Re-generate PDF" type="object" class="oe_highlight" groups="l10n_mx_facturae_groups.group_l10n_mx_facturae_user"/>
                        <button name="signal_cancel" states="cancel" string="Re-Cancel With Pac" type="object" groups="l10n_mx_facturae_groups.group_l10n_mx_facturae_user"/>
                        <button name="reset_to_draft" states="cancel" string="Reset to Draft" type="object" groups="l10n_mx_facturae_groups.group_l10n_mx_facturae_manager" invisible="1"/>
                        <button name="forward_email" states="sent_customer,sent_backup,done" string="Forward Email" type="object" groups="l10n_mx_facturae_groups.group_l10n_mx_facturae_user" invisible="1"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,signed,printable,done,cancel" statusbar_colors='{"invoice_except":"red","waiting_date":"blue"}'/>
                    </header>
                    <sheet string="Attachment Factura-E">
                        <group>
                            <field name="name"/>
                            <field name="res_pac"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="file_input"/>
                            <label for="file_xml_sign"/>
                            <div name="file_xml_sign_info">
                                <field name="file_xml_sign" invisible="True"/>
                                <field name="download_xml_sign_name" invisible="True"/>
                                <field name="download_xml_sign" filename="download_xml_sign_name"/>
                            </div>
                            <label for="file_pdf"/>
                            <div name="file_xml_sign_info">
                                <field name="file_pdf" invisible="True"/>
                                <field name="download_pdf_name" invisible="True"/>
                                <field name="download_pdf" filename="download_pdf_name"/>
                            </div>
                            <field name="identifier"/>
                         </group>
                    <notebook>
                        <page string="General Information">
                            <group colspan="4">
                                <field name="msj" invisible="1"/>
                                <field name="last_date" invisible="1"/>
                                <field name="date_print_report" invisible="1"/>
                            </group>
                        </page>
                        <page string="Other info">
                            <group colspan="4">
                                <field name="cfdi_fecha_timbrado" readonly="1"/>
                                <field name="cfdi_fecha_cancelacion" readonly="1"/>
                                <field name="attachment_email"/>
                            </group>
                        </page>
                    </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_ir_attachment_facturae_mx_tree" model="ir.ui.view">
            <field name="name">view.ir.attachment.facturae.mx.tree</field>
            <field name="model">ir.attachment.facturae.mx</field>
            <field name="arch" type="xml">
                <tree string="Attachment Factura-E">
                    <field name="name"/>
                    <field name="identifier"/>
                    <field name="res_pac"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="action_ir_attachment_facturae_mx" model="ir.actions.act_window">
            <field name="name">action.ir.attachment.facturae.mx</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ir.attachment.facturae.mx</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field eval="False" name="view_id"/>
        </record>
        <!--
        <menuitem id="menu_ir_attachment_facturae_mx"
            name="Attacment FacturaE WKF"
            parent="account.menu_finance_invoice"
            action="menu_action_ir_attachment_facturae_mx"
        />-->
    </data>
</openerp>
