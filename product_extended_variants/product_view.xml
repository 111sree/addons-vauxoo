<?xml version="1.0"?>
<openerp>
    <data>
        <record id="product_extend_form_view" model="ir.ui.view">
            <field name="name">product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <field name="standard_price" position="after">
                    <button name="%(product_extended.action_view_compute_price_wizard)d" string="Recompute price from BoM"
                            type="action" attrs="{'invisible': [('cost_method', '!=', 'standard')]}"
                             groups="stock_account.group_inventory_valuation"/>
                </field>
            </field>
        </record>


        <record id="product_template_form_view" model="ir.ui.view">
            <field name="name">extended.product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="account.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='property_account_income']" position="before">
                        <field name="property_difference_price_account_id" domain="[('type','&lt;&gt;','view'),('type','&lt;&gt;','consolidation')]"/>
                </xpath>
            </field>
        </record>

        <record id="view_extendedcategory_property_form" model="ir.ui.view">
            <field name="name">Extended.product.category.property.form.inherit</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="account.view_category_property_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='property_account_income_categ']" position="before">
                            <field name="property_difference_price_account_id" domain="[('type','&lt;&gt;','view'),('type','&lt;&gt;','consolidation')]"/>
                    </xpath>
                </data>
            </field>
        </record>

    </data>
</openerp>
