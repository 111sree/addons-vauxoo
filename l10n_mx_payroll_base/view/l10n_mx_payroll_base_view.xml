<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <act_window
            context="{'search_default_id_source': active_ids, 'default_id_source': active_ids, 'search_default_model_source': 'hr.payslip'}"
            id="act_payroll_attachment"
            name="Attachment Payroll"
            res_model="ir.attachment.facturae.mx"
            src_model="hr.payslip"
            />

        <record model="ir.ui.view" id="l10n_mx_hr_payslip_view">
            <field name="name">l10n.mx.hr.payslip.view</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='number']" position="before">
                    <field name="date_payslip"/>
<!--
                    <field name="journal_id" on_change="onchange_journal_id(journal_id, context)" widget="selection"/>
-->
                    <field name="payslip_datetime"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="pay_method_id"/>
                </xpath>
                <xpath expr="//separator[@string='Worked Days']" position="before">
                    <separator string="Generic Product"/>
                        <field name="product_id" domain="[('type', '=', 'service')]"/>
                </xpath>
                <xpath expr="//field[@name='credit_note']" position="before">
                    <field name="schedule_pay"/>
                    <field name="partner_id"/>
                </xpath>
                <xpath expr="//field[@name='credit_note']" position="after">
                    <field name="currency_id" groups="base.group_multi_currency" widget="selection"/>
                    <field name="approval_id" invisible="True"  widget="selection"/>
                </xpath>
                    
            </field>
        </record>
        
        <record model="ir.ui.view" id="view_hr_payslip_inherit_domain_journal_form">
            <field name="name">hr.payslip.inherit.domain.journal.form</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll_account.view_hr_payslip_inherit_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_id']" position="attributes">
                    <attribute name="domain">[('type','=', 'general')]</attribute>
                </xpath>
            </field>
        </record>

