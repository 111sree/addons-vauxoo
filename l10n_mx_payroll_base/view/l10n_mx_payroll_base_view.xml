<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <act_window
            context="{'search_default_payroll_id': [active_ids], 'default_payroll_id': [active_ids]}"
            id="act_payroll_attachment"
            name="Attachment Payroll"
            res_model="ir.attachment.facturae.mx"
            src_model="hr.payslip"
            />

        <record model="ir.ui.view" id="view_ir_attachment_facturae_mx_filter_inherit">
            <field name="name">view.ir.attachment.facturae.mx.filter.inherit</field>
            <field name="model">ir.attachment.facturae.mx</field>
            <field name="inherit_id" ref="l10n_mx_ir_attachment_facturae.view_ir_attachment_facturae_mx_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type']" position="after">
                    <field name="payroll_id" attrs="{'invisible':[('payroll_id','=', False)]}"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="l10n_mx_hr_payslip_view">
            <field name="name">l10n.mx.hr.payslip.view</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='number']" position="before">
                    <field name="date_payslip"/>
                    <field name="journal_id" on_change="onchange_journal_id(journal_id)"/>
                    <field name="payslip_datetime"/>
                    <field name="currency_id"/>
                    <field name="approval_id"/>
<!--
                    <field name="partner_id"/>
-->
                    
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="pay_method_id"/>
                </xpath>
                
                <xpath expr="//separator[@string='Worked Days']" position="before">
                    <separator string="Generic Product"/>
                    <field name="line_payslip_product_ids">
                        <tree string="Generic Product" editable="bottom">
                            <field name="product_id"/>
                            <field name="amount"/>
                        </tree>
                    </field>
                </xpath>
            </field>
        </record>
    </data>

    <data>
        <record model="ir.ui.view" id="view_ir_attachment_payroll_mx_form">
            <field name="name">view.ir.attachment.payroll.mx.form</field>
            <field name="model">ir.attachment.facturae.mx</field>
            <field name="inherit_id" ref="l10n_mx_ir_attachment_facturae.view_ir_attachment_facturae_mx_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="payroll_id" attrs="{'invisible':[('payroll_id','=', False)]}"/>
                    <field name="journal_id" attrs="{'invisible':[('payroll_id','=', False)]}"/>
                </xpath>
<!--
                <xpath expr="//field[@name='invoice_id']" position="attributes">
                    <attribute name="invisible">('payroll_id','&lt;&gt;', False)</attribute>
                </xpath>
-->
            </field>
        </record>
    </data>
</openerp>
