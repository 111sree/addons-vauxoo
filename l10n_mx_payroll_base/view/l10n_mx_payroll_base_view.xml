<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <act_window
            context="{'search_default_id_source': active_ids, 'default_id_source': active_ids, 'search_default_model_source': 'hr.payslip'}"
            id="act_payroll_attachment"
            name="Attachment Payroll"
            res_model="ir.attachment.facturae.mx"
            src_model="hr.payslip"
            />

        <record model="ir.ui.view" id="l10n_mx_hr_payslip_view">
            <field name="name">l10n.mx.hr.payslip.view</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='number']" position="before">
                    <field name="date_payslip"/>
                    <field name="journal_id" on_change="onchange_journal_id(journal_id)"/>
                    <field name="payslip_datetime"/>
                    <field name="currency_id"/>
                    <field name="approval_id" invisible="True"/>
                    <field name="partner_id"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="pay_method_id"/>
                </xpath>
                <xpath expr="//separator[@string='Worked Days']" position="before">
                    <separator string="Generic Product"/>
                    <field name="line_payslip_product_ids">
                        <tree string="Generic Product" editable="bottom">
                            <field name="product_id"/>
                            <field name="amount"/>
                        </tree>
                    </field>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_hr_payslip_form_salary_rule_id_inherit2">
            <field name="name">view.hr.payslip.form.salary.rule.id.inherit2</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='input_line_ids']" position="before">
                    <separator string="Totales"/>
                    <group>
                    <field name="deduction_total"/>
                    <field name="perception_total"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
