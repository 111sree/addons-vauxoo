        <menuitem id="menu_ir_attachment_facturae_mx"
            name="Attacment FacturaE WKF" 
            parent="account.menu_finance_invoice"
            action="menu_action_ir_attachment_facturae_mx"
        />-->
    </data>
</openerp>
